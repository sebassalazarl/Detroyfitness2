<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/main_entrenamiento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/toolbar_entrenamiento"
            android:layout_below="@+id/header_entrenamiento">

            <ImageButton
                android:id="@+id/B_desafioSemanal"
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_above="@+id/referencia_entrenamiento"
                android:background="@drawable/photo_desafio_semanal"
                android:layout_centerHorizontal="true"/>

            <ImageButton
                android:id="@+id/B_planEntrenamiento"
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_marginBottom="20dp"
                android:layout_above="@+id/B_desafioSemanal"
                android:background="@drawable/photo_plan_entrenamiento"
                android:layout_centerHorizontal="true"/>
            <ImageButton
                android:id="@+id/B_sobrecargaProgresiva"
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_below="@+id/referencia_entrenamiento"
                android:background="@drawable/photo_sobrecarga"
                android:layout_centerHorizontal="true"/>
            <ImageButton
                android:id="@+id/B_tecnica"
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/B_sobrecargaProgresiva"
                android:background="@drawable/photo_tecnica"
                android:layout_centerHorizontal="true"/>


            <Button
                android:id="@+id/referencia_entrenamiento"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:text="" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/header_entrenamiento"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/background_toolbar">


            <TextView
                android:id="@+id/textoEntrenamiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/B_flecha_atras_entrenamiento"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:text="Entrenamiento"
                android:textColor="#c2ca3e"
                android:textSize="21sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/B_flecha_atras_entrenamiento"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/flechatras"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="Button" />

            <TextView
                android:id="@+id/NombreUsuarioView_entrenamiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/foto_perfil_entrenamiento"
                android:layout_centerVertical="true"
                android:text="NOMBRE USAURIO"
                android:layout_marginRight="55dp"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/foto_perfil_entrenamiento"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/perfil_img" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/toolbar_entrenamiento"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_down">

            <TextView
                android:id="@+id/textView98"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/botonnutricion_img_entrenamiento"
                android:layout_alignRight="@+id/textView99"
                android:layout_marginTop="8dp"
                android:layout_marginRight="150dp"
                android:text="NutriciÃ³n"
                android:textColor="#c2ca3e"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/botonnutricion_img_entrenamiento"
                app:srcCompat="@drawable/nutricion_boton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignRight="@+id/botonEntreno_img_entrenamiento"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="140dp" />

            <Button
                android:id="@+id/B_nutricion"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignRight="@+id/B_entrenamiento"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="140dp"
                android:background="@android:color/transparent"
                android:text="" />

            <TextView
                android:id="@+id/textView99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/botonEntreno_img_entrenamiento"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Entrenamiento"
                android:textColor="#c2ca3e"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/botonEntreno_img_entrenamiento"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/pesa" />

            <ImageView
                android:id="@+id/botonperfil_img_entrenamiento"
                app:srcCompat="@drawable/botonp_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/botonEntreno_img_entrenamiento"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="12dp" />


            <Button
                android:id="@+id/B_entrenamiento"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="" />

            <TextView
                android:id="@+id/textView100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/botonperfil_img_entrenamiento"
                android:layout_alignLeft="@+id/textView99"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="8dp"
                android:text="Perfil"
                android:textColor="#c2ca3e"
                android:textSize="12sp" />

            <Button
                android:id="@+id/B_perfil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/B_entrenamiento"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="140dp"
                android:background="@android:color/transparent"
                android:text="" />

        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>